<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- a start -->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- statusBar颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item><!-- 底色 -->
        <item name="android:navigationBarColor">@color/colorPrimary</item><!-- 底下模拟按键的背景颜色 -->
    </style>
    <!-- toolbar左边有边距 解决方案-->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- a end   -->
    <!-- b start -->
    <!-- b end   -->
    <!-- c start -->
    <!-- c end   -->
    <!-- d start -->
    <!-- d end   -->


</resources>
