<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义横向 progress↓↓↓" />

            <ProgressBar
                android:id="@+id/progressBar11"
                style="@style/mProgress_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style=@style/mProgress_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义横向2 progress↓↓↓" />

            <ProgressBar
                android:id="@+id/progressBar10"
                style="@style/mProgress_horizontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style=@style/mProgress_horizontal2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义圆形 progress↓↓↓" />

            <ProgressBar
                android:id="@+id/progressBar12"
                style="@style/mProgress_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style=@style/mProgress_circle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义圆形2 progress↓↓↓" />

            <ProgressBar
                android:id="@+id/progressBar13"
                style="@style/mProgress_circle2"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style=@style/mProgress_circle2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义圆形3 progress↓↓↓" />

            <ProgressBar
                android:id="@+id/progressBar14"
                style="@style/mProgress_circle3"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style=@style/mProgress_circle3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SeekBar" />

            <SeekBar
                style="@style/mProgress_horizontal2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="20"
                android:id="@+id/seekbar" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>